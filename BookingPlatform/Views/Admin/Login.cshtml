@using BookingPlatform.Constants;

@{
    ViewBag.SectionTitle = Strings.Admin.Login.SectionTitle;
    ViewBag.Title = Strings.Admin.Login.PageTitle;
    ViewBag.HideMenu = true;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-1000px">
    <h2>@ViewBag.Title</h2>
    <p>@Strings.Admin.Login.LoginText</p>
    @using (Html.BeginForm())
    {
        <input name="password" type="password" placeholder="@Strings.Admin.Login.InputLabelPassword" />
        <input type="submit" value="@Strings.Admin.Login.Submit" />
        if (ViewBag.LoginFailed == true)
        {
            <br />
            <span class="field-validation-error">@Strings.Admin.Login.WrongPassword</span>
        }
    }
</div>
