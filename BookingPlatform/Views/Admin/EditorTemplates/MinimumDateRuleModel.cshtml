@model MinimumDateRuleModel
@using BookingPlatform.Models;
@using BookingPlatform.Constants;

@if (!Model.IsNew)
{
    @Html.HiddenFor(m => m.Id)
}

@Html.LabelFor(m => m.Date, Strings.Admin.RuleDetails.InputLabelDate)
@Html.TextBoxFor(m => m.Date, new { data_date_picker = bool.TrueString })
@Html.ValidationMessageFor(m => m.Date)

@Html.LabelFor(m => m.Days, Strings.Admin.RuleDetails.InputLabelDays)
@Html.TextBoxFor(m => m.Days)
@Html.ValidationMessageFor(m => m.Days)
