@model MultipleBookingRuleModel
@using BookingPlatform.Models;
@using BookingPlatform.Constants;
@using BookingPlatform.Backend.Entities;
@using BookingPlatform.Utilities;

@if (!Model.IsNew)
{
    @Html.HiddenFor(m => m.Id)
}

@Html.LabelFor(m => m.EventId, Strings.Admin.RuleDetails.InputLabelRuleScope + "*")
@Html.DropDownListFor(m => m.EventId, Model.EventListItems)
@Html.ValidationMessageFor(m => m.EventId)

@Html.LabelFor(m => m.NumberOfParallelBookings, Strings.Admin.RuleDetails.InputLabelNumberOfParallelBookings +"*")
@Html.TextBoxFor(m => m.NumberOfParallelBookings, new { type = "number" })
@Html.ValidationMessageFor(m => m.NumberOfParallelBookings)



