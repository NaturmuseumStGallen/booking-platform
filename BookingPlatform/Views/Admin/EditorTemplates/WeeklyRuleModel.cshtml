@model WeeklyRuleModel
@using BookingPlatform.Models;
@using BookingPlatform.Constants;

@if (!Model.IsNew)
{
    @Html.HiddenFor(m => m.Id)
}

@Html.LabelFor(m => m.Day, Strings.Admin.RuleDetails.InputLabelDayOfWeek)
@Html.DropDownListFor(m => m.Day, Model.DayOfWeekListItems)
@Html.ValidationMessageFor(m => m.Day)

@Html.LabelFor(m => m.Status, Strings.Admin.RuleDetails.InputLabelStatus)
@Html.DropDownListFor(m => m.Status, Model.StatusListItems)
@Html.ValidationMessageFor(m => m.Status)

@Html.LabelFor(m => m.Time, Strings.Admin.RuleDetails.InputLabelTime)
@Html.TextBoxFor(m => m.Time)
@Html.ValidationMessageFor(m => m.Time)

@Html.LabelFor(m => m.StartDate, Strings.Admin.RuleDetails.InputLabelStartDate)
@Html.TextBoxFor(m => m.StartDate, new { data_date_picker = bool.TrueString })
@Html.ValidationMessageFor(m => m.StartDate)
