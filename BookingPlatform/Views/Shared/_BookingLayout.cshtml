<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <meta charset="utf-8" />
        <link href="@Url.Content("~/Resources/Style/Booking.css")" rel="stylesheet" type="text/css" />
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.3.min.js" type="text/javascript"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js" type="text/javascript"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/additional-methods.min.js" type="text/javascript"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
        <script src="@Url.Content("~/Resources/Scripts/Booking.js")" type="text/javascript"></script>
    </head>
    <body>
        <img alt="logo" class="logo" src="@Url.Content("~/Resources/Images/Logo.jpg")" height="100" />
        @RenderBody()
        <script type="text/javascript">
            // Required to be able to validate hidden fields. Must not be run on document ready event...
            $.validator.setDefaults({ ignore: [] });
        </script>
    </body>
</html>
